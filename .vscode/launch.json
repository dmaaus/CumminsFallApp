    "version": "0.2.0",
    "configurations": [
        {
            "type": "cordova",
            "request": "launch",
            "name": "Run On Android Emulator",
            "port": 9222,
            "platform" : "android",
            "target" : "emulator",
            "sourceMaps": true,
            "cwd" : "${workspaceFolder}",
            "ionicLiveReload": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/components/event-card/event-card.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}